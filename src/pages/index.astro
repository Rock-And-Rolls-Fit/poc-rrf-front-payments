---
import Product from "@/components/Product.astro";
import Layout from "@/layouts/Layout.astro";
import { v4 as uuidv4 } from "uuid";

const userId = uuidv4();

export interface IProducts {
  title: string;
  subtitle: string;
  content: string[];
  price: number;
}

const products: IProducts[] = [
  {
    title: "Rock",
    subtitle: "$5 inscription $25 per month",
    content: ["Meal plan.", "Customized training.", "Unlimited hours."],
    price: 30,
  },
  {
    title: "Multi Rock",
    subtitle: "$5 inscription $35 per month",
    content: [
      "Access to all GYM Rocks.",
      "Meal plan.",
      "Customized training.",
      "Unlimited hours.",
    ],
    price: 40,
  },
  {
    title: "Parking Rock",
    subtitle: "$5 inscription $45 per month",
    content: [
      "Parking for your car.",
      "Meal plan.",
      "Customized training.",
      "Unlimited hours.",
    ],
    price: 50,
  },
];
---

<Layout>
  <div class="bg-white py-10 space-y-4">
    <div class="flex justify-center items-center">
      <img
        src="https://www.rockandrollsfit.com/wp-content/uploads/2025/02/cropped-logo-rockweb-01.png"
        alt="Success"
        class="w-40 h-auto"
      />
    </div>
    <h1 class="text-6xl font-bold text-center uppercase">Plans</h1>
    <p class="text-center text-lg text-gray-900 px-4">
      Registration only can be done in person at the GYM.
    </p>
  </div>
  <div
    class="flex flex-col gap-4 py-20 justify-center items-center bg-[#F37622]"
  >
    <div class="grid md:grid-cols-3 gap-4 md:w-3/4">
      {
        products.map((product) => (
          <Product
            title={product.title}
            subtitle={product.subtitle}
            content={product.content}
            price={product.price}
            userId={userId}
          />
        ))
      }
    </div>
  </div>
</Layout>
