---
import Layout from "@/layouts/Layout.astro";
---

<Layout>
  <div class="bg-white py-10 space-y-4 flex flex-col gap-4 justify-center items-center">
    <img
      src="https://www.rockandrollsfit.com/wp-content/uploads/2025/02/cropped-logo-rockweb-01.png"
      alt="Success"
      class="w-40 h-auto"
    />
    <h1 class="text-center text-3xl font-bold">Success!</h1>
  </div>
  <div class="bg-[#F37622] py-20 px-4">
    <div class="flex flex-col gap-4 pb-16">
      <p class="text-xl font-semibold">Your payment was successful!</p>
      <p class="text-sm text-gray-900">
        You will receive an email with the invoice number and the payment
        details.
      </p>
    </div>
  </div>
</Layout>
